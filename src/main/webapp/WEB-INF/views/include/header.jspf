<style>
html {
    height: 100%;
}
body {
    position: relative;
    width: 100%;
    height: 100%;
    font-family: 'Noto Sans KR', sans-serif;
    font-size: 16px;
}
.this-header {
    width: 1140px;
    margin: 0 auto;
}
input {
    font-size: 24px;
    font-weight: 100;
}
a {
    color: grey;
    text-decoration: none;
}
.super-top-menu {
    font-size: 12px;
}
.super-top-menu ul {
    list-style:none;
    margin:0;
    padding:0;
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
}
.super-top-menu ul li {
    margin-right: 20px;
}
.header-menu ul {
    list-style:none;
    margin-top:20px;
    padding:0;
    display: flex;
    flex-direction: row;
}
.header-menu ul li{
    color: grey;
    font-size: 12px;
    margin-left: 30px;
    text-align: center;
}
.searchbar {
    width: 400px;
    height: 42px;
    position: static;
    border-radius: 30px;
    left: 50%;
    border: 2px solid Turquoise;
    box-shadow: none;
    text-align: center;
    background-image: url("img/search-icon.png");
    background-repeat: no-repeat;
    background-size: 35px;
    background-position: 350px center;
    margin-right: 80px;
}

.searchbar:focus {
    outline: none;
}
.header-sub ul{
    line-height: 1;
    margin: 0;
    padding: 0;
}
.color-hr {
    border-top: 1px solid Turquoise;
    width: 100%;
}
.hamburger-button {
    width: 48px;
    height: 35px;
    background-color: Turquoise;
    display: inline-block;
    cursor: pointer;
    margin: 0;
}
.bar1, .bar2, .bar3 {
    width: 35px;
    height: 3px;
    background-color: white;
    margin: 5px;
}
.panel-body ul {
    flex-direction: column;
}
.panel-body ul li{
    text-align: left;
    font-size: 16px;
    margin: 5px;
}
.checkbox-list {
    margin: 5px;
}
.product-thumbnail img{
    border-radius: 20px;
}
.col-md-4 {
    width: 25%;
}
.product-content a {
    font-size: 14px;
    font-weight: 300;
    color: black;
}
.product-content .price {
    margin: 5px;
}
.section {
    padding: 0;
    margin: 0;
}
.col-md-3 {
    width: 20%;
    margin: 1%;
}
.page-header {
    background-color: white;
    margin: 0;
}
.related-keyword{
    border: 1px solid Turquoise;
    border-radius: 10px;
    text-align: center;
    padding: 5px;
    font-weight: 200;
    margin: 0 5% 0 5%;
}
.keyword-button {
    font-size: 14px;
    font-weight: 400;
    border-radius: 5px;
    border: none;
}
hr {
    margin: 0;
    padding: 0;
}
.company-info {
    margin: 10px;
    font-size: 12px;
    font-weight: 100;
}
.widget-title {
    padding: 10px;
}
.sort-option ul li{
    margin-bottom: 3px;
}
